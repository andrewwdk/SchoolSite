@model SchoolWebSite2.Models.ClassWithStudentsModel

<style>
    .options {
        width: 20%;
        background-color: aqua;
    }

    .main-part {
        width: 60%;
        text-align: center;
        margin: 20px 10%;
    }

    .main-container {
        display: flex;
        flex-wrap: wrap;
    }

    label, .input-font-size {
        font-size: 20px;
        margin: 0 20px;
        padding-top: 6px;
    }

    .main-content {
        margin: 20px 28%;
        font-size: 20px;
    }

    .lesson-number {
        font-size: 20px;
        padding-top: 8px;
    }

    .number-input {
        width: 50px;
    }

    .code-input {
        width: 150px;
    }

    .class-teacher-input {
        width: 60%;
    }
</style>

<div class="main-container">
    <div class="options">
        @Html.Partial("UserOptions")
    </div>
    <div class="main-part">
        <h2>@Model.Class.FullName</h2>
        @Html.AntiForgeryToken()
        <div style="display:flex;flex-direction:column;width:100%;flex-wrap:wrap;justify-content:center;">
            @Html.LabelFor(model => model.Class.ClassTeacher, htmlAttributes: new { @class = "" })
            <div style="font-size: 20px;margin: 20px 0;">@Html.DisplayFor(model => model.Class.ClassTeacherName)</div>
            @Html.LabelFor(model => model.Class.Info, htmlAttributes: new { @class = "" })
            <div style="font-size: 20px;margin: 20px 0;"> @Html.DisplayFor(model => model.Class.Info)</div>
        </div>
        <div class="form-horizontal main-container">
            <div class="main-content">
                @for (int i = 0; i < Model.Students.Count(); i++)
                {
                    <div style="display:flex;flex-direction:row;width:400px;">
                        <div style="margin:10px 0;"> @Html.DisplayFor(model =>  model.Students[i].FullName) </div>
                        
                    </div>
                }
            </div>
        </div>
    </div>
</div>