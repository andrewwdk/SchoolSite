@model SchoolWebSite2.Models.Classroom

<style>
    .options {
        width: 20%;
        background-color: aliceblue;
    }

    .main-part {
        width: 60%;
        text-align: center;
        margin: 20px 10%;
    }

    .main-container {
        display: flex;
        flex-wrap: wrap;
    }

    label, .input-font-size {
        font-size: 20px;
        margin: 0 20px;
        padding-top: 6px;
    }

    .main-content {
        margin: 20px 28%;
        font-size: 20px;
    }

    .lesson-number {
        font-size: 20px;
        padding-top: 8px;
    }

    .number-input {
        width: 50px;
    }

    .code-input {
        width: 150px;
    }

    .class-teacher-input {
        width: 60%;
    }

    input[type="checkbox"]:before{
        width:0px;
        height: 0px;
        display:none;
    }

    input[type="checkbox"]:after{
        width:0px;
        height: 0px;
    }

    .checkbox-input {
        width: 20px;
        height: 20px;
        
    }
</style>

<div class="main-container">
    <div class="options">
        @Html.Partial("UserOptions")
    </div>
    <div class="main-part">
        <h2>Кабинет @Model.Number</h2>
        @Html.AntiForgeryToken()

        @using (Html.BeginForm("Edit", "Classrooms", null, FormMethod.Post))
        {
            <div style="display:flex;width:100%;flex-wrap:wrap;justify-content:center;">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Number)
                <div style="display:flex;flex-direction:row;width:100%;flex-wrap:wrap;justify-content:center;margin:10px 0;">
                    @Html.LabelFor(model => model.SitsCount, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.SitsCount, new { htmlAttributes = new { @class = "form-control code-input", @min = "1", @max = "100" } })
                </div>
                <div style="display:flex;flex-direction:row;width:100%;flex-wrap:wrap;justify-content:center;margin:10px 0;">
                    @Html.LabelFor(model => model.HasComputers, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.HasComputers, new { htmlAttributes = new { @class = "checkbox-input" } })
                    @Html.LabelFor(model => model.HasDigitalEquipment, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.HasDigitalEquipment, new { htmlAttributes = new { @class = "checkbox-input" } })
                </div>
                <input type="submit" value="Сохранить" class="btn btn-default" style="margin:10px 0; width:150px;" />
            </div>
            @Html.ValidationMessageFor(model => model.SitsCount, "", new { @class = "text-danger" })
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }
    </div>
</div>
